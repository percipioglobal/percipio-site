.hero-main {
    background: linear-gradient(45deg, #000734, #000107, #000734, #000107);
    background-size: 600% 600%;
    animation: gradient 30s ease infinite;
}
@keyframes gradient {
	0% {
		background-position: 0% 50%;
	}
	50% {
		background-position: 100% 50%;
	}
	100% {
		background-position: 0% 50%;
	}
}