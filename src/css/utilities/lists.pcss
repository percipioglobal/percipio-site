.list-hierarchical {
    list-style: none; 
    font: 11px arial; 
    margin: 0px 0px 0px 10px; 
    padding: 0;
    counter-reset: num;
}

.list-hierarchical li:before {
    content: counter(num) '. ';
    counter-increment: num;
}

.list-hierarchical .list-hierarchical li:before {
    content: counters(num, '.') ' ';
}