{% if options.swatch %}
    {% set logo %}
        {% include '_atoms/svgs/svg--logo.svg' with { swatch: options.swatch } %}
    {% endset %}
{% endif %}

{% set values = {
    url: options.url,
    title: options.title ?? '',
    logo: options.swatch ? logo : options.logo ??? options.placeholder.brandingPlaceholder[0],
    utilities: options.utilities ?? '',
} %}

{% set svg = options.swatch ? values.logo : svg(values.logo, sanitize = true) %}

<a 
    href="{{- values.url -}}"
    title="{{- values.title -}}"
    class="p-2 pb-0 bg-white-100"
>

    {{- svg | attr({ class: values.utilities }) -}}

</a>