{%- extends "_atoms/buttons/button--variables" -%}

{#
    ### OPTIONS ###
    ---------------

    url: (STR) -- the url for the button
    text: (STR) -- the text for the button
    icon: (STR) -- the icon for the button ( optional )
    utlities: (STR) -- the button utility from TW for the last button in the loop
    swatch: (STR) -- add a colour swatch to button

#}

{%- block button -%}

    {%- minify -%}

        <a
            {{ values.url ? 'href=' ~ values.url : '' }}
            {{ values.gaCategory ? 'data-tag-category=' ~ values.gaCategory : '' }}
            {{ values.gaAction ? 'data-tag-action=' ~ values.gaAction : '' }}
            {{ values.gaLabel ? 'data-tag-label=' ~ values.gaLabel : '' }}
            {{ values.target ? 'target=' ~ values.target : '' }}
            aria-label="{{- values.text -}}"
            class="relative overflow-hidden group inline-flex uppercase font-bold text-base
                    {{ values.inverted ? ( values.swatch ? 'text-' ~ values.swatch.primary : 'text-white-100' ) : 'text-white-100' }} 
                    {{ values.utilities ? values.utilities : '' -}}"
        >
            <span class="relative z-10 group-hover:text-{{- values.inverted ? 'white-100' : ( values.swatch ? values.swatch.primary : 'black-100' ) }} transition-colors duration-200 delay-75 ease-in-out">
                {{- values.text -}}
            </span>

        </a>

    {%- endminify -%}

{%- endblock -%}