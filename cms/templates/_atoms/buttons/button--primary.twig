{% extends "_atoms/buttons/button--variables" %}

{#
    ### OPTIONS ###
    ---------------

    url: (STR) -- the url for the button
    text: (STR) -- the text for the button
    icon: (STR) -- the icon for the button ( optional )
    utlities: (STR) -- the button utility from TW for the last button in the loop
    swatch: (STR) -- add a colour swatch to button
    size: (STR) -- define a button size

#}

{% block button %}

    {%- minify -%}

        {%- set sizes = {
            'small': 'px-4 py-2',
            'large': 'px-8 py-4',
        } -%}

        <a {{ values.url ? 'href=' ~ values.url : '' }} class="inline-flex border-2 {{ sizes[values.size] is defined ? sizes[values.size] : sizes['large'] }} font-extrabold text-lg border-{{- values.swatch ? values.swatch.primary : '' }} text-{{- values.swatch ? values.swatch.primary : 'white-100' }} hover:text-{{- values.swatch ? values.swatch.primary : 'blue-600' }} hover:bg-white-100 {{ values.utilities ? values.utilities : '' -}}">
            {{- values.text -}}
        </a>

    {%- endminify -%}

{% endblock %}
