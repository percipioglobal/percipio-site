{% do craft.eagerBeaver.eagerLoadElements(entry, [
    'heroBuilder',
    'heroBuilder.heroMain:buttons.buttons',
    'heroBuilder.heroMain:heroImage',
    'heroBuilder.heroImage:image',
    ])
%}

{%- minify -%}
    {%- for block in content.heroBuilder -%}

        {%- switch block.type -%}

            {%- case 'heroContent' -%}

                {%- include '_organisms/heroes/hero--content' ignore missing with {
                    content: block,
                } -%}

            {% case "heroMain" %}

                {%- include '_organisms/heroes/hero--main' ignore missing with {
                    content: block,
                } -%}

            {% case "heroImage" %}

                {%- include '_organisms/heroes/hero--image' ignore missing with {
                    content: block,
                } -%}

        {%- endswitch -%}

    {%- endfor -%}
{%- endminify -%}
