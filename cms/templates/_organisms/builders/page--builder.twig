{% do craft.eagerBeaver.eagerLoadElements(entry, [
    'pageBuilder',
    'pageBuilder.blogHighlightCards:cards',
    'pageBuilder.projectHighlightCards:cards',
    'pageBuilder.serviceHighlightCards:cards',
    'pageBuilder.sectionHeader:buttons',
    'pageBuilder.singleImage:image',
    'pageBuilder.galleryImages:images',
    'pageBuilder.basicSlider:slides',
    'pageBuilder.basicSlider.slides:image',
    ])
%}

{%- minify -%}
    {%- for block in content.pageBuilder -%}
        {%- switch block.type -%}

            {%- case "article" -%}

                {%- include '_molecules/content/content--article' ignore missing with {
                    content: block,
                    prose: 'md:prose-2xl',
                } -%}

            {%- case "sectionHeader" -%}

                {%- include '_molecules/headers/header--section' ignore missing with {
                    content: block,
                    type: 'normal',
                } -%}

            {%- case "singleImage" -%}

                {%- include '_molecules/images/image--single' ignore missing with {
                    content: block,
                } -%}

            {%- case "galleryImages" -%}

                {%- include '_molecules/images/image--gallery' ignore missing with {
                    content: block,
                } -%}

            {%- case "projectHighlightCards" -%}

                {%- include '_organisms/cards/cards--project' ignore missing with {
                    content: block,
                } -%}

            {%- case "blogHighlightCards" -%}

                {%- include '_organisms/cards/cards--blog' ignore missing with {
                    content: block,
                } -%}

            {%- case "serviceHighlightCards" -%}

                {%- include '_organisms/cards/cards--service' ignore missing with {
                    content: block,
                } -%}

        {%- endswitch -%}

    {%- endfor -%}
{%- endminify -%}
