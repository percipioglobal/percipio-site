{% do craft.eagerBeaver.eagerLoadElements(entry, [
    'heroBuilder',
    'heroBuilder.heroPrimary:buttons.buttons',
    'heroBuilder.heroPrimary:heroImage',
    'heroBuilder.heroSecondary:image',
    'heroBuilder.heroSecondary:buttons.buttons',
    ])
%}

{%- minify -%}
    {%- for block in content.heroBuilder -%}

        {%- switch block.type -%}

            {%- case 'heroPrimary' -%}

                {%- include '_organisms/heroes/hero--primary' ignore missing with {
                    content: block,
                } -%}

            {%- case "heroSecondary" -%}

                {%- include '_organisms/heroes/hero--secondary' ignore missing with {
                    content: block,
                } -%}

            {%- default -%}
                {%- include '_organisms/heroes/hero--primary' ignore missing with {
                    content: block,
                } -%}

        {%- endswitch -%}

    {%- endfor -%}
{%- endminify -%}
