{% do craft.eagerBeaver.eagerLoadElements(entry, [
    'heroBuilder',
    'heroBuilder.heroMain:buttons.buttons',
    'heroBuilder.heroMain:heroImage',
    'heroBuilder.heroImage:image',
    'heroBuilder.heroVideo:video',
    'heroBuilder.heroVideo:buttons.buttons',
    ])
%}

{%- minify -%}
    {%- for block in content.heroBuilder -%}

        {%- switch block.type -%}

            {%- case 'heroPrimary' -%}

                {%- include '_organisms/heroes/hero--primary' ignore missing with {
                    content: block,
                } -%}

            {%- case "heroSecondary" -%}

                {%- include '_organisms/heroes/hero--secondary' ignore missing with {
                    content: block,
                } -%}

            {%- default -%}
                {%- include '_organisms/heroes/hero--primary' ignore missing with {
                    content: block,
                } -%}

        {%- endswitch -%}

    {%- endfor -%}
{%- endminify -%}
