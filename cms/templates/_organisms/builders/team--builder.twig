{% do craft.eagerBeaver.eagerLoadElements(entry, [
    'projectImage',
    ]) 
%}

<div class="container max-w-screen-xl mx-auto">
    
    {%- minify -%}
        {%- for block in content.teamBuilder -%}
            
            {%- switch block.type -%}

                {%- case "teamMemberHeader" -%}
                    {%- include '_molecules/headers/header--team' ignore missing with {
                        content: block,
                    } -%}

                {%- case "teamMemberDetails" -%}
                
                    {%- include '_molecules/content/team-details' ignore missing with {
                        content: block,
                        categories: content.teamCategories,
                    } -%}

                {%- case "teamMemberSummary" -%}
                
                    {%- include '_molecules/content/team-summary' ignore missing with {
                        content: block,
                    } -%}

                {%- case "projectImage" -%}
                
                    {%- include '_molecules/images/image--single' ignore missing with {
                        content: block,
                    } -%}

            {%- endswitch -%}

        {%- endfor -%}
    {%- endminify -%}

</div>