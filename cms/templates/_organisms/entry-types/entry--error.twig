{% import '_macros/atoms' as render %}

<section class="flex flex-grow items-center">

    <div class="container mx-auto px-8 lg:px-0 py-20">

        <div class="flex flex-col md:flex-row items-center">

            <div class="w-full md:w-1/3 sm:pr-10 lg:pr-0 relative mb-20 md:mb-0">

                <a 
                    href="/" 
                    data-tag-category="error-home" 
                    data-tag-action="click" 
                    data-tag-label="/"
                    title="Homepage" 
                    class="relative w-24 h-24 lg:h-40 lg:w-40 block max-w-full left-1/2 top-0 transform -translate-x-1/2"
                >
                    <div class="w-full absolute left-0 top-0 opacity-75 glitch-red">
                        {% set swatchGlitch = {
                            primary: 'red-500',
                            secondary: 'red-500',
                        } -%}
                        {% include '_atoms/svgs/svg--logo.svg' with { swatch: swatchGlitch } %}
                    </div>

                    <div class="w-full absolute left-0 top-0 opacity-75 glitch-blue">
                        {% set swatchGlitch = {
                            primary: 'yellow-300',
                            secondary: 'yellow-300',
                        } -%}
                        {% include '_atoms/svgs/svg--logo.svg' with { swatch: swatchGlitch } %}
                    </div>

                    <div class="w-full absolute left-0 top-0">
                        {% include '_atoms/svgs/svg--logo.svg' with { swatch: swatch } %}
                    </div>
                </a>

                <span class="font-primary text-6xl font-bold text-center w-full inline-block pt-12 text-{{- swatch.primary -}}">
                    {{ content.title ?? 'Error' }}
                </span>
                
            </div>

            <div class="w-full md:w-2/3">
                <h1 class="font-primary text-3xl font-bold mb-4">
                    {{ content.description ?? 'An error has occurred.' }}
                </h1>

                <hr class="h-1 w-32 my-2 bg-{{- swatch.primary -}}">

                <p class="font-sans text-xl pt-4 pb-10">
                    Maybe we can help you. Here are some of our pages:
                </p>

                {{- render.atom('button', 'primary', {
                    url: '/',
                    text: 'Visit our homepage',
                    swatch: swatch,
                    utilities: 'mr-4 mb-4',
                    inverted: true,
                    swatch: swatch,
                }) -}}

                {%- set url = craft.entries.section('pages').type('blogPage').one().url -%}

                {{- render.atom('button', 'primary', {
                    url: url,
                    text: 'Read our articles',
                    swatch: swatch,
                    utilities: 'mb-4',
                    fill: true,
                    inverted: true,
                }) -}}

            </div>
        </div>
        
    </div>

</section>