{% do craft.eagerBeaver.eagerLoadElements(entry, [
    'metaImage',
    ])
%}

{% import '_macros/atoms' as render %}

<div id="content pb-12 md:pb-32">
	{%- include '_organisms/builders/hero--builder' with {
        content: entry,
    } -%}

    <div class="container mx-auto px-8 lg:px-0 max-w-screen-lg">
        <div class="flex flex-wrap">

            <div class="relative text-left w-full md:w-1/2 text-white-100 py-8 bg-{{ swatch.primary -}}">
                <div class="relative z-10">
                    <h3 class="text-2xl font-bold mb-4" >Contact</h3>
                    {% include "_molecules/content/content--contact" %}
                </div>

                <div class="absolute top-0 right-0 w-screen h-full bg-{{ swatch.primary -}}"></div>
            </div>

            <div class="relative text-right w-full md:w-1/2 text-white-100 py-8 bg-{{ swatch.secondary -}}">
                <div class="relative z-10">
                    <h3 class="text-2xl font-bold mb-4" >Follow us</h3>
                    {% include "_organisms/navigations/navigation--social" with { utilities: 'md:space-x-2' } %}
                </div>

                <div class="absolute top-0 left-0 w-screen h-full bg-{{ swatch.secondary -}}"></div>
            </div>
        </div>
    </div>

	{%- include '_organisms/builders/page--builder' with {
        content: entry,
    } -%}
</div>
