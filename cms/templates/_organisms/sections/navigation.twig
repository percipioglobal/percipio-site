{% set nodes = craft.navigation.nodes()
    .handle('primaryNavigation')
    .level(1)
    .all() %}



<div>  
    <div class="z-40 w-full absolute bg-transparent h-12 md:h-20 py-16 flex justify-between items-center px-8 md:px-16 lg:px-32">
        <div class="w-16 h-16">
            <a href="{{ siteUrl }}" title="percipio">                
                <svg version="1.1" id="Percipio_Logo" xmlns="http://www.w3.org/2000/svg" x="0" y="0" viewBox="0 120 866 1000" xml:space="preserve">
                    <path id="P_Section" fill="none" d="M0 559.5l537.7-309.6-104.2-60.2L164.6 345 0 250 433 0l433 250-537.6 309.6 268.5 155L433 809.5z"/>
                    <g id="Dark_Group" fill={{entry.type == 'homepage' or entry.type == 'blog' ? '#1c64f2' : 'none' }} class="{{ entry.type == 'homepage' or entry.type == 'blog' ? "" : 'fill-current text-' ~ color ~ '-800' }}">
                        <path id="Dark_2" d="M433 809.5l163.9-94.9-268.5-155L866 250v500l-433 250z"/>
                        <path id="Dark_1" d="M164.6 345v119.7l268.9-154.8V189.7z"/>
                    </g>
                    <g id="Light_Group" fill={{entry.type == 'homepage' or entry.type == 'blog' ? '#d61f69' : 'none' }} class="{{ entry.type == 'homepage' or entry.type == 'blog' ? "" : 'fill-current text-' ~ color ~ '-600' }}">
                        <path id="Light_3" d="M433.5 189.7v120.2l104.2-60z"/>
                        <path id="Light_2" d="M0 559.5l433 250V1000L0 750z"/>
                        <path id="Light_1" d="M0 250l164.6 95v119.7L0 559.5z"/>
                    </g>
                </svg>
            </a>
        </div>
                
                
        <div class="w-16 h-16">
            <div @click="toggleMenu" class="flex justify-end items-center cursor-pointer h-16 w-16">
                <div class="absolute flex justify-end items-center h-16 w-16 z-40">
                    <span :class="hamburgerOpen ? 'rotate-45 translate-y-2' : 'rotate-0'" class="{{ entry.type == 'homepage' or entry.type == 'blog' ? 'bg-blue-600' : 'bg-' ~ color ~ '-600'}} mb-4 relative block transform origin-center w-12 h-2 transition-all duration-200 ease-in-out"/>
                    <span :class="hamburgerOpen ? '-rotate-90 -translate-y-4' : 'rotate-0'" class="{{ entry.type == 'homepage' or entry.type == 'blog' ? 'bg-blue-600' : 'bg-' ~ color ~ '-600'}} mt-4 relative block transform origin-center w-12 h-2 transition-all duration-200 ease-in-out"/>
                <div>
            </div>
        </div>
    </div>

    <div :class="hamburgerOpen ? 'block' : 'hidden'" class="bg-white-90 text-gray-800 z-30 overflow-scroll fixed top-0 left-0 w-screen h-screen">
        <div class="relative max-w-md w-full ml-auto bg-white px-4 pt-5 pb-4 flex-1 flex flex-col">
            <div class="mt-24 flex-1 h-0 overflow-y-auto">
                <nav class="text-2xl font-extrabold px-2 space-y-4">  
                    <h3 class="hover:underline"><a href="{{ siteUrl }}projects">Work</a></h3>
                    <h3 class="hover:underline"><a href="{{ siteUrl }}services" title="services" aria-label="services">Services</a></h3>
                    <h3 class="hover:underline"><a href="{{ siteUrl }}team" title="team" aria-label="team">Team</a></h3>
                    <h3 class="hover:underline"><a href="{{ siteUrl }}careers" title="careers" aria-label="careers">Careers</a></h3>
                    <h3 class="hover:underline"><a href="{{ siteUrl }}blog" title="blog" aria-label="blog">Articles</a></h3>
                    <h3 class="hover:underline"><a href="{{ siteUrl }}contact" title="contact" aria-label="contact">Contact</a></h3>
                </nav>
                <hr class="my-6 mx-2 max-w-xs text-gray-800 h-1 w-1/2">
                <nav class="text-lg font-extrabold px-2 space-y-2">  
                    <h4 class="hover:underline"><a href="#" title="facebook" aria-label="facebook">Facebook</a></h4>
                    <h4 class="hover:underline"><a href="#" title="twitter" aria-label="twitter">Twitter</a></h4>
                    <h4 class="hover:underline"><a href="#" title="instagram" aria-label="instagram">Instagram</a></h4>
                    <h4 class="hover:underline"><a href="#" title="linkedin" aria-label="linkedin">LinkedIn</a></h4>
                </nav>
            </div>
        </div>
    </div>
</div>