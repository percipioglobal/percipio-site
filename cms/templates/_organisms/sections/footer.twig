	<div class="border-t border-gray-400 text-gray-600 text-xs font-mono flex flex-col md:flex-row md:items-center md:justify-between mt-8 mx-auto px-4 py-6 lg:py-8">
		<nav role="menu" class="mb-4 md:mb-0 md:mx-4 lg:mx-12 flex flex-1 justify-center md:justify-end space-x-6 md:space-x-2 order-1 md:order-3" aria-labelledby="footer-social-navigation">
			<div role="menubar" class="w-full text-center md:text-right">
				{% for social in socialNavigation.all() %}
					<a href="{{social.socialMediaUrl}}" class="text-gray-700 hover:text-gray-500 inline-block text-lg {{ not loop.last ? 'mr-3' : '' }}" role="menuitem" title="{{social.socialMediaType}}" aria-label="{{social.socialMediaType}}" target="_blank" rel="noopener">
						<span class="sr-only">{{social.socialMediaType.label}}</span>
						{% set icon = "" %}
						{% switch social.socialMediaType %}
							{% case "facebook" %}
								{% set icon = "fa-facebook-f" %}
							{% case "twitter" %}
								{% set icon = "fa-twitter" %}
							{% case "instagram" %}
								{% set icon = "fa-instagram" %}
							{% case "linkedin" %}
								{% set icon = "fa-linkedin-in" %}
							{% case "youtube" %}
								{% set icon = "fa-youtube" %}
							{% case "vimeo" %}
								{% set icon = "fa-vimeo-v" %}
							{% case "github" %}
								{% set icon = "fa-github" %}
						{% endswitch %}
						{% if icon != "" %}
							<i class="fab {{icon}}"></i>
						{% endif %}
					</a>
				{% endfor %}
			</div>
		</nav>
		<nav class="mb-3 md:mb-0 md:mx-4 lg:mx-12 text-md text-center flex flex-1 justify-center space-x-6 leading-6 order-1 md:order-2" role="menu" aria-labelledby="footer-legal-navigation">
			{% nav node in nodes %}
			<a {% if node.url %} href="{{ node.url }}" {% endif %} title="{{- node.title -}}" class="hover:underline {{ node.classes | length ? node.classes : '' }}" {% if node.newWindow %} target="_blank" rel="noopener" {% endif %} {% for attribute in node.customAttributes %} {{ attribute.attribute }}="{{ attribute.value }}" {% endfor %} role="menuitem">
				{{- node.title -}}
			</a>
			{% endnav %}
		</nav>
		<div class="text-md text-center md:text-left md:mx-4 lg:mx-12 flex flex-1 justify-center md:justify-start space-x-6 leading-6 order-3 md:order-1">
			<p>&copy;
				{{now|date('Y')}}. Percipio is a Trademark of Percipio Global Ltd</p>
		</div>
	</div>

</footer>
