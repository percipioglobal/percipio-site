{% import '_macros/atoms' as atom %}


{%- set clients = entry.clientFooterBuilder.all() ?? null -%}

<footer class="w-full absolute z-30 bg-white-100">

    {% if clients %}
        <div class="bg-gray-100 py-16 px-8">
            <div class="container max-w-screen-xl mx-auto">
                <div class="client flex flex-wrap lg:flex-no-wrap justify-between w-full">
                {%- for client in clients -%}
                    {{- atom.client_logo(client.logo[0], entry.type, client.clientUrl, client.description|striptags) -}} 
                {%- endfor -%} 
                </div>
            </div>
        </div>
    {%- endif -%} 

    <div class="relative max-w-screen-xxl border-t border-gray-400">
        <div class="footer-hexagon absolute left-50 transform -translate-x-1/2 -translate-y-1/2 text-gray-400">
            <svg class="stroke-current" width="65" height="74" viewBox="0 0 65 74">
                <path d="M34.385,1.26l27.21,15.709a5.292,5.292,0,0,1,2.392,4.143V52.531a5.291,5.291,0,0,1-2.392,4.142L34.384,72.383a5.289,5.289,0,0,1-4.783,0L2.392,56.674A5.291,5.291,0,0,1,0,52.531V21.112A5.292,5.292,0,0,1,2.392,16.97L29.6,1.261A5.29,5.29,0,0,1,34.385,1.26Z"
                transform="translate(0.5 -0.065)" fill="#fff" stroke="currentColor" stroke-width="1"/>
            </svg>
        </div>
        <div class="text-center font-mono text-pink-600 pt-20">
            made with &#9829 by Percipio
        </div>
    </div>

    <div class="px-4 pt-12 pb-4 md:pb-12 lg:py-16 mx-auto flex justify-around flex-col md:flex-row text-gray-700">
        <div class="hidden md:block flex-1 flex-col border-b-4 border-blue-600 md:mx-4 lg:mx-12">
            <h3 class="mb-8 text-blue-600 font-bold">
                Percipio
            </h3>
            <h2 class="mb-8 text-4xl font-bold">
                Building applications for better futures.
            </h2>
        </div>
        <div class="flex-1 flex-col border-b-4 border-pink-600 md:mx-4 lg:mx-12 mb-8 md:mb-0">
            <h3 class="mb-8 text-pink-600 font-extrabold text-xl md:text-base">
                Newsletter
            </h3>
            <form class="mt-4 xl:flex xl:max-w-md">
                <label for="emailAddress" class="sr-only">Email address</label>
                <input type="email" id="emailAddress" required class="appearance-none min-w-0 w-full bg-white border border-gray-700 rounded-md shadow-sm py-2 px-4 text-base leading-6 text-gray-900 placeholder-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline focus:placeholder-gray-400 transition duration-150 ease-in-out" placeholder="example@domain.com">
                <div class="mt-3 rounded-md xl:mt-0 xl:ml-3 xl:flex-shrink-0">
                    <button type="submit" class="w-full bg-transparent hover:bg-blue-600 font-bold 
                    text-blue-600 hover:text-white-100 hover:border-transparent border-2 border-blue-600 rounded-md
                     py-2 px-4 text-base leading-6 focus:outline-none focus:shadow-outline transition duration-150 ease-in-out">
                    Submit
                    </button>
                </div>
            </form>
            <div class="flex items-start mt-3 mb-8">
                <div class="flex items-center h-5">
                    <input id="comments" type="checkbox" class="form-checkbox h-4 w-4 transition duration-150 ease-in-out">
                </div>
                <div class="ml-3 text-sm leading-5">
                    <label for="comments" class="text-base leading-6">I would like to hear from Percipio about their exciting projects</label>
                </div>
            </div>
        </div>
        <div class="flex-1 flex-col border-b-4 border-purple-600 md:mx-4 lg:mx-12">
            <h3 class="mb-8 text-purple-600 font-extrabold text-xl md:text-base">
                Contact
            </h3>
            <div class="mb-8 mt-9">
                <div class="flex">
                    <div class="flex-shrink-0">
                    <!-- Heroicon name: home -->
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                        </svg>
                    </div>
                    <div class="ml-3 text-base leading-6">
                        <p>
                            Unit 122, 372 Old Street
                        </p>
                        <p class="mt-1">
                            London EC1V 9LT
                        </p>
                    </div>
                </div>
                <div class="mt-4 flex">
                    <div class="flex-shrink-0">
                    <!-- Heroicon name: phone -->
