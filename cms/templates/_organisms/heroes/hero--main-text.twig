
{%- import '_macros/atoms' as render -%}

{%- minify -%}
<section class="relative w-full min-h-2/4 pt-0 md:pt-24 flex items-center overflow-hidden">
	<div class="container mx-auto max-w-screen-lg">
		<div class="z-2 relative px-12 pt-32 md:pt-20 pb-6 md:pb-20 bg-{{- swatch.primary }} border-b-8 border-{{- swatch.secondary -}}">

			<h1 class="sr-only">
				{{- seomatic.site.identity.genericName -}}:
				{{- render.atom('text', 'title', { content: content.heading ??? entry.title }) -}}
			</h1>

			<h2 class="font-extrabold leading-none text-4xl lg:text-6xl text-white-100">
				{{- render.atom('text', 'title', { content: content.heading ??? entry.title }) -}}
			</h2>

			{% if content.description %}
				<div class="prose prose-lg mt-8 md:mt-2 text-white-100">
					{{- render.atom('text', 'content', { content: content.description }) -}}
				</div>
			{% endif %}

            {% if content.buttons %}

                {{- render.atom('button', 'group', {

                    buttons: content.buttons,
                    type: 'primary',
                    utilities: 'mt-6 space-x-4',
                    gaCategory: 'hero-cta',
                    gaAction: 'click'

                }) -}}

            {% endif %}

		</div>

	</div>
</section>
{%- endminify -%}
