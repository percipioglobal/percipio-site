{%- import '_macros/atoms' as atom -%}

{%- minify -%}

    <section class="w-full">
      
            <div class="h-full overflow-hidden relative hero-grad">
                <div class="px-8 md:px-16 lg:px-32 pt-20 lg:pt-32 relative z-40">
                    <div class="pt-16 text-white whitespace-no-wrap font-bold leading-tight text-4xl md:text-5xl lg:text-6xl">
                        <h1>{{- atom.text(entry.overline) -}}</h1>
                    </div>
                    <div class="pt-16 text-white whitespace-no-wrap font-bold leading-tight text-4xl md:text-5xl lg:text-6xl">
                        <h1>{{- atom.text(entry.title) -}}</h1>
                    </div>
                    <div class="pt-10 pb-24 text-white font-semibold leading-tight text-2xl md:text-3xl lg:text-4xl">
                        <h3>{{- atom.text(entry.description) -}}</h3>
                    </div>
                </div>
            </div>
    </section>

{%- endminify -%}
