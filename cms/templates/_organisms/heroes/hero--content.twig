{%- import '_macros/atoms' as render -%}
{%- import '_macros/functions' as functions -%}

{%- minify -%}
<section class="relative pt-32 pb-20 w-full flex items-center overflow-hidden">
	<div class="container max-w-screen-lg mx-auto px-8 lg:px-0">

		<h1 class="sr-only">
			{{- seomatic.site.identity.genericName -}}:
			{{- render.atom('text', 'title', { content: content.heading ??? entry.title }) -}}
		</h1>

		<h2 class="font-extrabold leading-tight text-6xl text-{{ swatch.primary }} max-w-2xl">
			{{- render.atom('text', 'title', { content: content.heading ??? entry.title }) -}}
		</h2>

		{% if content.description|length %}
				<div class="max-w-2xl prose prose-lg mt-12 text-gray-800">
					{{- render.atom('text', 'content', { content: content.description }) -}}
				</div>
			{% endif %}
	</div>
</section>
{%- endminify -%}
