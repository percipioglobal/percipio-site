{%- set cards = cards|default([]) -%}

{%- minify -%}
    <section class="grid grid-cols-3 py-12 md:py-32 container max-w-screen-xl mx-auto">
        {%- for card in cards -%}

            {%- switch card.type -%}

                {%- default -%}


                        {%- include '_molecules/cards/card--primary-large' ignore missing with {
                            title: card.title,
                            subtitle: card.subtitle ??? '',
                            teaser: card.teaserImage[0] ??? null,
                        } -%}


            {%- endswitch -%}

        {%- endfor -%}
    </section>
{%- endminify -%}
