{%- set exclude = exclude ??? null -%}
{%- set authors = authors ??? '*' -%}
{%- set limit = limit ??? null -%}
{%- set spacing = spacing ??? 'my-12 md:my-24' %}

{%- set blogs = blogs ??? craft.entries.section('blog')
    .with(['teaserImage', 'blogCategories', 'authors', 'authors.teaserImage'])
    .id(['not', exclude ? content.id : null])
    .orderBy('postDate desc')
    .limit(limit)
    .all() 
-%}

{%- minify -%}

    <div class="w-full {{ spacing -}}">
        {%- for blog in blogs -%}
            {%- include '_molecules/cards/card--blog' ignore missing with {
                content: blog,
                ga: {
                    category: 'card-blog',
                    action: 'click',
                    label: 'Card blog'
                }
            } -%}
        {%- endfor -%}
    </div>


{%- endminify -%}
