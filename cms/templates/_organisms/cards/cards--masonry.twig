{%- minify -%}

    {% set cardsType = type ?? 'default' %}

    {%- switch cardsType -%}

        {%- case 'content' -%}
            {%- set cards = content.cards.all() -%}

        {% default %}
            {%- set cards = content -%}

    {%- endswitch -%}

    <div class="print:hidden my-16 lg:grid grid-cols-8 xl:grid-cols-6 gap-8 relative z-30">
        {%- for card in cards -%}
            {% switch loop.index % 6 %}
                {% case 1 %}
                    {%- include '_molecules/cards/card--masonry' ignore missing with {
                        content: card,
                    } -%}

                {% case 2 or 5 %}
                    {%- include '_molecules/cards/card--masonry' ignore missing with {
                        width: 'col-span-3 xl:col-span-2',
                        content: card,
                    } -%}

                {% case 3 or 4 %}
                    {%- include '_molecules/cards/card--masonry' ignore missing with {
                        width: 'col-span-4 xl:col-span-3',
                        isHorizontal: true,
                        content: card,
                    } -%}

                {% case 0 %}
                    {%- include '_molecules/cards/card--masonry' ignore missing with {
                        content: card,
                    } -%}
            {% endswitch %}

        {%- endfor -%}

    </div>



{%- endminify -%}
