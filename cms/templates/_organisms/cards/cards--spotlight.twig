{% switch content.settings %}
    {% case "project" %}
        {%- include '_organisms/cards/cards--projects' ignore missing with {
            spacing: 0,
            margin: 'my-12 md:my-16',
            limit: content.limit,
        } -%}
    {% case "service" %}
        {%- include '_organisms/cards/cards--service' ignore missing with {
            limit: content.limit,
        } -%}
    {% case "blog" %}

        {%- set spacing = null -%}

        {%- if content.getPrev() and content.getNext() %}

            {%- if content.getPrev().type == 'sectionHeader' and content.getNext().type == 'sectionHeader' -%}
                {%- set spacing = 'my-0' %}
            {%- else -%}

                {%- if content.getPrev() -%}
                    {%- set spacing = content.getPrev().type == 'sectionHeader' ? 'mb-12 md:mb-24' : null -%}
                {%- endif -%}

                {%- if content.getNext() -%}
                    {%- set spacing = content.getNext().type == 'sectionHeader' ? 'mt-12 md:mt-24' : null -%}
                {%- endif -%}

            {%- endif -%}

        {%- else -%}

            {%- if content.getPrev() -%}
                {%- set spacing = content.getPrev().type == 'sectionHeader' ? 'mb-12 md:mb-24' : null -%}
            {%- endif -%}

            {%- if content.getNext() -%}
                {%- set spacing = content.getNext().type == 'sectionHeader' ? 'mt-12 md:mt-24' : null -%}
            {%- endif -%}

        {%- endif -%}

        {%- include '_organisms/cards/cards--blog' ignore missing with {
            limit: content.limit,
            spacing: spacing, 
        } -%}
{% endswitch %}