{%- extends '_molecules/cards/_content--props' -%}
{%- import '_macros/atoms' as render -%}

{#
    ### PROPERTIES ###
    ------------------

    INHERITED FROM: `_molecules/content/_content--props.twig`

    ### COMPONENTS ###
    ------------------

    ## ATOMS

    text--h2: `_atoms/texts/text--h2.twig`
#}

{%- set classes = {
    _default: 'block font-primary',
    color: 'text-gray-800',
    print: 'print:text-black print:text-lg print:leading-6 break-avoid',
} -%}

{%- minify -%}

    <div class="container max-w-[80ch] mx-auto mt-5 md:mt-10 {{ props.utilities -}}">
        <h2 class="{{- classes._default }} {{ classes.color}} {{ classes.print }}">
            {{- render.atom('text', 'h2', { content: props.content.heading }) -}}
        </h2>
    </div>

{%- endminify -%}
