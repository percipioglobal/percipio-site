{% import '_macros/atoms' as atom %}

{%- minify -%}
    <div class="flex flex-col md:flex-row justify-between my-12 px-4 lg:px-0 lg:mx-16 xl:x-32">
        <div class="prose prose-lg text-lg text-green-900 leading-relaxed md:mr-8">
        {{- atom.text(block.teamMemberSummary) -}}
        </div>
        <div class="mt-5 md:mt-0 px-4 lg:mr-8">
            <div class="border-b-2 border-{{- color -}}-800"> 
                <div class="font-mono">
                    {{- atom.text(block.teamCategoriesHeader) -}}
                </div>
                <div class="flex flex-wrap my-4">
                    {%- for category in categories -%}
                        <span class="bg-{{color}}-700 mr-6 my-2 px-4 py-2 rounded-full font-secondary text-white text-xs tracking-wide font-medium">
                            {{- category.title -}}
                        </span>
                    {%- endfor -%}
                </div>
            </div>
        </div>
    </div>
{%- endminify -%}
