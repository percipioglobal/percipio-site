{% import '_macros/atoms' as render %}

<div class="grid grid-cols-2 grid-rows-3 h-full">

    {# TODO: Need border calculations #}

    {% for item in content.items %}

        {% set border = null %}

        {% switch(loop.index) %}

            {% case 1 %}

                {% set border = 'lg:border-b-2 lg:border-r-2' %}

            {% case 2 %}

                {% set border = 'lg:border-b-2' %}

            {% case 3 %}

                {% set border = 'lg:border-r-2' %}

            {% case 4 %}

                {% set border = '' %}

            {% case 5 %}

                {% set border = 'lg:border-t-2 lg:border-r-2' %}

            {% case 6 %}

                {% set border = 'lg:border-t-2' %}

        {% endswitch %}

        <div class="p-10 lg:px-20 flex flex-col justify-start lg:border-dashed lg:border-{{- blockSwatch.secondary }} {{ border -}}">
            <h3 class="text-white-100 text-4xl font-bold mb-4">{{- render.atom('text', 'title', { content: item.heading }) -}}</h3>

            <div class="prose prose-2xl text-white-100">
                {{- render.atom('text', 'content', { content: item.article }) -}}
            </div>
        </div>

    {% endfor %}

</div>