{%- extends '_molecules/images/_image--props' -%}
{%- import '_macros/atoms' as render -%}

{%- block image -%}
    {%- minify -%}
        {%- if props.image -%}
            <section class="container max-w-[84ch] mx-auto pb-8 {{ props.utilities -}}">
                {{- render.atom('image', 'article', {
                        image: props.image.collect().first(),
                        sizes: ['100vw'],
                        alt: props.image.title,
                        placeholders: placeholders,
                    })
                -}}
            </section>
        {%- endif -%}
    {%- endminify -%}
{%- endblock -%}
