{% import '_macros/atoms' as atom %}

{%- minify -%}
    <section class="mx-auto my-10 {{entry.type == 'blog' ? 'container max-w-5xl mx-auto' : null }} {{ content.position == 'full' ? '-mx-4 md:-mx-32' : '' }}">
        <div class="flex flex-col-reverse lg:flex-row">
            <div class="lg:text-left w-full md:w-1/3 lg:mr-3">
                {% if content.caption %}
                    {{- atom.caption(content.caption) -}}
                {% endif %}
            </div>
            <div>
                {{- atom.article_image(content.image[0], content.image[0].title, content.ratio, content.caption ?? content.image[0].caption, content.image[0].author ?? null, content.image[0].source ?? null) -}}
            </div>
        </div>
    </section>
{%- endminify -%}