{% import '_macros/atoms' as render %}

{%- minify -%}
    <section class="mx-auto mt-16 {{entry.type == 'news' ? 'container px-0 lg:px-12' : null }} {{ content.position == 'full' ? '-mx-4 md:-mx-32' : '' }}">
        {{- render.atom('image', 'article', { image: content.image[0], alt: content.image[0].title, ratio: content.ratio, caption: content.caption ?? content.image[0].caption, author: content.image[0].author ?? "", source: content.image[0].source ?? ""   }) -}}
    </section>
{%- endminify -%}