{%- import '_macros/atoms' as render -%}

{%- minify -%}
    <section class="mx-auto mt-10 {{entry.type == 'blog' ? 'container max-w-5xl mx-auto' : null }} {{ content.position == 'full' ? '-mx-4 md:-mx-32' : '' }}">
        <div class="flex flex-col-reverse lg:flex-row">
            {% if entry.type == 'blog' %}
                <div class="lg:text-left w-full lg:w-1/3 lg:mr-3">
                    {# {% if content.caption %}
                        {{- render.atom('text', 'caption', { caption: content.caption }) -}}
                    {% endif %} #}
                </div>
            {% endif %}
            <div>
                {{- render.atom('image', 'article', { 
                    image: content.image[0], 
                    alt: content.image[0].title, 
                    ratio: content.ratio, 
                    caption: content.caption ?? content.image[0].caption, 
                    author: content.image[0].author ?? "", 
                    source: content.image[0].source ?? ""   }) 
                    placeholders: placeholders    
                -}}
            </div>
        </div>
    </section>
{%- endminify -%}
