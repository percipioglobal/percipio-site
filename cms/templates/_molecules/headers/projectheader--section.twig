{% import '_macros/atoms' as atom %}

{% set image = block.clientLogo[0] ?? placeholder.articlePlaceholder[0] %}

{%- minify -%}
    <div class="my-8 px-4 md:px-4 lg:mx-16 ">
        <div class="flex items-center text-lg text-green-900 leading-relaxed">
            <div class="hidden lg:block w-1/3 float-left mr-16">
                {{- atom.article_image(image) -}}
            </div>
            {{- atom.text(block.clientDescription) -}}
        </div>  
         
    </div>
{%- endminify -%}


        