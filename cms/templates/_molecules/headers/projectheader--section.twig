{% import '_macros/atoms' as atom %}

{% set image = block.clientLogo[0] ?? placeholder.articlePlaceholder[0] %}

{%- minify -%}
    <div class="mt-24 mb-6 px-4 lg:px-0 lg:mx-56">
        <div class="flex flex-col justify-center text-center text-lg text-green-900 leading-relaxed">
            <div class="my-2 w-full flex justify-center">
                {{- atom.client_logo(image, entry.type) -}}
            </div>
            <div class="my-2">
                {{- atom.text(block.clientDescription) -}}
            </div>
        </div>  
         
    </div>
{%- endminify -%}


        