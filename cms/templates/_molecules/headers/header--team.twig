{% import '_macros/atoms' as atom %}

{%- set teaserImage = entry.teaserImage[0] ?? placeholder.teaserPlaceholder[0] -%}

{%- minify -%}
    <div class="flex flex-col justify-center my-12 px-4 lg:px-0 lg:mx-56">
        <div class="mx-auto my-4 h-40 w-40 rounded-full overflow-hidden">
            {{- atom.teaser_image(teaserImage, teaserImage.title, 'is2by1' ) -}}
        </div>
        <div class="text-lg text-green-900 text-center leading-relaxed">
            {{- atom.text(content.bio) -}}
        </div>
     </div>
{%- endminify -%}