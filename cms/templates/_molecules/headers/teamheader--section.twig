{% import '_macros/atoms' as atom %}

{%- minify -%}
    <div class="flex flex-col md:flex-row justify-between my-12 px-4 lg:px-0 lg:mx-16 xl:x-32">
        <div class="my-4 border-l-4 border-blue-500 py-4 px-4 md:mr-8 md:px-4">
            <div class="font-mono mb-4">
                {{- atom.text(block.funFactHeader) -}}
            </div>
            <div class="text-lg text-green-900 leading-relaxed">
                {{- atom.text(block.funFactBody) -}}
            </div>
        </div>
        <div class="justify border-l-4 border-blue-500 h-32 py-4 px-4 my-6 lg:mr-8">
            <div class="font-mono mb-4 ">
                {{- atom.text(block.areasOfExpertiseHeader) -}}
            </div>
            <div class="flex flex-wrap">
                {%- for category in categories -%}
                    <span class="bg-blue-500 px-4 py-2 mb-2 mr-2 rounded-full font-secondary text-white-100 text-xs break-normal tracking-wide font-medium">
                        {{- category.title -}}
                    </span>
                {%- endfor -%}
            </div>
        </div>
    </div>
{%- endminify -%}