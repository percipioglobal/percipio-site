{% import '_macros/atoms' as render %}

{%- minify -%}

    <div class="my-16">

        {# TODO set maxwidth breakpoints #}
        <div class="container mx-auto px-8 lg:px-0 max-w-screen-lg">
            <div class="leading-tight">
                {{- render.atom('text', 'overline', {
                        content: content.overline,
                        utilities: 'text-' ~ swatch.primary ~ ' mb-4',
                    })
                -}}
                <h2 class="text-5xl font-bold mb-8">
                    {{- render.atom('text', 'title', { content: content.heading }) -}}
                </h2>

                {% if content.button %}

                    {{- render.atom('button', 'primary', {
                        url: content.button.getUrl(),
                        text: content.button.getText(),
                        swatch: swatch
                    }) -}}
                {% else %}

                    <hr class="h-1 w-32 bg-{{- swatch.primary -}}">

                {% endif %}
            </div>

        </div>

    </div>
{%- endminify -%}
