    <div class="relative border-b border-dashed border-gray-300 leading-relaxed my-8 sm:mb-3">

        <h4 class="text-lg font-bold text-red-500 p-4">
            {{- atom.text(content.question) -}}
        </h4>

        <div class="font-normal text-base text-gray-500 p-4">
            {{- atom.text(content.answer) -}}
