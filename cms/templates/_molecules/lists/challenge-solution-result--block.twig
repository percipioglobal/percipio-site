{% import '_macros/atoms' as atom %}

{%- switch name -%}
    {%- case "Research School Foundation" -%}
        {%- set color = 'red' -%}
    {%- case "Education Endowment Foundation" -%}
        {%- set color = 'orange' -%}
    {%- case "Harding Hub" -%}
        {%- set color = 'purple' -%}
    {%- case "Percipio Global" -%}
        {%- set color = 'teal' -%}
    {%- case "National Tutoring Programme" -%}
        {%- set color = 'blue' -%}
    {%- case "The Sutton Trust" -%}
        {%- set color = 'blue' -%}
    {% default %}
        {%- set color = 'gray' -%}
{%- endswitch -%}

{%- minify -%}
    <div class="flex flex-col md:flex-row my-12 px-4 lg:px-0 lg:mx-16 xl:x-32">
        <div class="my-4 border-l-4 border-{{- color -}}-800 py-4 px-4 mr-2 md:px-4">
            <div class="font-mono mb-4">
            {{- atom.text(block.challengeHeader) -}}
            </div>
            <div class="text-lg text-green-900 leading-relaxed">
            {{- atom.text(block.challengeBody) -}}
            </div>
        </div>
        <div class="my-4 border-l-4 border-{{- color -}}-800 py-4 px-4 mr-2 md:px-4">
            <div class="font-mono mb-4 ">
            {{- atom.text(block.solutionHeader) -}}
            </div>
            <div class="text-lg text-green-900 leading-relaxed">
            {{- atom.text(block.solutionBody) -}}
            </div>
        </div>
        <div class="my-4 border-l-4 border-{{- color -}}-800 py-4 px-4 mr-2 md:px-4">
            <div class="font-mono mb-4 ">
            {{- atom.text(block.resultHeader) -}}
            </div>
            <div class="text-lg text-green-900 leading-relaxed">
            {{- atom.text(block.resultBody) -}}
            </div>
        </div>
    </div>

{%- endminify -%}