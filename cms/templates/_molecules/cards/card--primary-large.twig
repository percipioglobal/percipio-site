{% import '_macros/atoms' as render %}

{%- set title = title|default('') -%}
{%- set subtitle = subtitle|default('') -%}
{%- set teaser = teaser|default(null) -%}
{%- set utilities = utilities|default('') -%}

<div class="col-span-2 relative bg-white shadow-2xl rounded-4xl p-6 pb-9 overflow-hidden {{ utilities -}}">

    <div class="relative rounded-[20px] overflow-hidden">
        {%- if teaser -%}
            {{- render.atom('image', 'card-large', {
                    image: teaser,
                    optimized: teaser.optimizeTeasers,
                    sizes: ['66.6vw'],
                    alt: title,
                    placeholder: placeholder.cardPlaceholder[0].optimizeTeasers,
                    utilities: 'w-full'
                })
            -}}
        {%- endif -%}
    </div>

    <div class="space-y-4">
        <h3>
            {{- render.atom('text', 'card-title', {
                content: title
            }) -}}
        </h3>

        <h4>
            {{- render.atom('text', 'card-subtitle', {
                content: subtitle
            }) -}}
        </h4>
    </div>

    <div class="bg-pink-500 h-3 absolute bottom-0 left-0 w-full"></div>
</div>
