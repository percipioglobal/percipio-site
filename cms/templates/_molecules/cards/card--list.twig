{%- import '_macros/atoms' as render -%}

{%- set teaserImage = content.teaserImage.one() ?? placeholder.teaserPlaceholder[0] -%}

{%- minify -%}
<a href="{{- content.url -}}" class="block bg-white-100 py-8 -mx-8 hover:bg-{{- colour -}}-500">
    <div class="container max-w-screen-lg mx-auto">
        <div class="flex w-full">
            <div class="flex-grow">
                <p class="font-mono text-base text-gray-800 pb-3">
                    <span class="text-teal-500">{{content.blogCategories|length ? content.blogCategories[0].title : ''}}</span>
                    by {{ content.author.fullName }} on
                    <time datetime="{{ content.postDate|date('c')}}">{{ content.postDate|date('jS F Y')}}</time>
                    {# {{ content.blogCategories|join( ' /') }} {{- render.atom('text', 'content', { content: "test" }) -}} #}
                </p>
                {{- render.atom('text', 'card-title', { content: content.title }) -}}
            </div>
            <div class="w-24 h-24">
                {{- render.atom('image', 'teaser', { image: teaserImage, alt:teaserImage.title, ratio: 'is1by1 rounded-full'  }) -}}
            </div>
        </div>
    </div>

	{# <div class="h-full flex flex-col w-full">
		<div class="relative">
			<div class="w-full block h-80">
				{{- render.atom('image', 'teaser', { image: teaserImage, alt:teaserImage.title, ratio: 'w-full h-full'  }) -}}
			</div>
		</div>
		<div class="flex flex-col flex-grow text-left p-8">
			<div class="flex-grow">
                {{- render.atom('text', 'overline', { content: content.overline }) -}}
