{%- import '_macros/atoms' as render -%}

{%- minify -%}
    <div class="container mx-auto max-w-screen-lg">
        {# <div class="grid grid-cols-3">
            

        </div> #}

        <div class="bg-white-100 shadow-xl">
            {{- render.atom('image', 'teaser', {
                    image: placeholders.teaserPlaceholder,
                    sizes: sizes ??? sizes,
                    alt: 'test',
                    ratio: 'aspect-video',
                    placeholders: placeholders,
                })
            -}}

            <div class="py-8 px-6">
                {{- render.atom('text', 'card-title', { 
                        content: content.title,
                    }) 
                -}}
                
                {{- render.atom('text', 'category-group', { 
                        categories: [
                            'Web development',
                            'Design'
                        ],
                        utilities: 'pt-4'
                    }) 
                -}}
            </div>
        </div>
    </div>
{%- endminify -%}