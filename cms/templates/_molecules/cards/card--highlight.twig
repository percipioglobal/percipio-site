{%- import '_macros/atoms' as render -%}


{# Load needed images #}
{%- set teaserImage = content.teaserImage[0] ?? placeholder.teaserPlaceholder[0] -%}
{%- set width = width ??? '' %}
{%- set isHorizontal = isHorizontal ??? false %}
{%- set categories = null %}
{%- set color =  'gray' %}

{%- switch content.type -%}
    {% case "blog" %}
        {% set categories = content.blogCategories ??? null %}
        {% set color = content.colourSwatch ??? "gray" %}
    {% case "projects" %}
        {% set categories = content.projectCategories ??? null %}
        {% set color = content.organisationCategory[0].colourSwatch ??? "gray" %}
    {% case "teamMember" %}
        {% set categories = content.teamCategories ??? null %}
        {% set color = content.colourSwatch ??? "gray" %}
{%- endswitch -%}

{%- minify -%}
<div class="hite-100 text-{{color}}-600 border-b-8 border-{{- color -}}-600 mb-8 shadow-md hover:shadow-2xl transition duration-200 ease-in-out {{ width }}">
	<div class="h-full flex flex-col w-full {{ isHorizontal ? 'xl:grid grid-cols-2 grid-rows-1' : '' -}}">
		<div class="relative {{ isHorizontal? 'h-full' : '' }}">
			<a href="{{- content.url -}}" class="w-full block {{ isHorizontal? 'h-full' : 'h-80' }}">
				{{- render.atom('image', 'teaser', { 
					image: teaserImage, 
					alt:teaserImage.title, 
					ratio: 'w-full h-full',
					placeholders: placeholders,  
				}) -}}
			</a>
		</div>
		<div class="flex flex-col flex-grow text-left p-8">
			<a href="{{- content.url -}}" class="flex-grow text-gray-800">
                {%- switch content.type -%}
                    {% case "blog" %}
                        <div class="text-xs leading-tight text-black-100 tracking-wider">
                            <address rel="author" class="text-2xl font-primary font-medium leading-none not-italic mb-1">{{- content.author -}}</address>
                            <time datetime="{{- entry.postDate|date('c') -}}" class="text-xs font-primary mt-6 font-medium uppercase tracking-wide leading-normal">{{- render.formatDate(content.postDate) -}}</time>
                        </div>
                    {% case "projects" %}
                        {{- render.atom('text', 'overline', { content: content.organisationName }) -}}
                    {% case "teamMember" %}
                        {{- render.atom('text', 'overline', { content: content.teamMemberRole }) -}}
                {%- endswitch -%}
                {{- render.atom('text', 'card-title', { content: content.title }) -}}
                {{- render.atom('text', 'card-description', { content: content.description }) -}}
			</a>
			<div>
				<div class="mt-10 md:mt-16">
					{%- if categories|length -%}
						{%- for category in categories -%}
							<a href="{{- category.url -}}" alt="{{- category.title -}}">
								<span class="bg-{{- color -}}-700 mt-2 mr-2 px-4 py-2 rounded-full font-secondary inline-block text-white-100 text-xs tracking-wide font-medium">
									{{- category.title  }}
								</span>
							</a>
						{%- endfor -%}
					{%- endif -%}
				</div>
			</div>
		</div>
	</div>
</div>
{%- endminify -%}
