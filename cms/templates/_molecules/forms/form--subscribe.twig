<form class="w-full">
	<label for="emailAddress" class="sr-only">Email address</label>
	<input type="email" id="emailAddress" required class="appearance-none w-full bg-white border border-gray-700 shadow-sm py-2 px-4 text-base leading-6 text-gray-900 placeholder-gray-500 focus:outline-none focus:border-{{- color -}}-300 focus:shadow-outline focus:placeholder-gray-400 transition duration-150 ease-in-out" placeholder="example@domain.com">
	<div class="mt-3 xl:mt-0">
		<button 
			type="submit" 
			data-tag-category="subscription" 
			data-tag-action="submit" 
			data-tag-label="subscription"
			class="w-full bg-transparent hover:bg-{{- color -}}-600 font-bold text-{{- color -}}-600 hover:text-white-100 hover:border-transparent border-2 border-{{- color -}}-600 py-2 px-4 text-base leading-6 focus:outline-none focus:shadow-outline transition duration-150 ease-in-out">
			Submit
		</button>
	</div>
	<div class="flex items-start mt-3 mb-8">
		<div class="flex items-center h-5">
			<input id="comments" type="checkbox" class="form-checkbox h-4 w-4 transition duration-150 ease-in-out">
		</div>
		<div class="ml-3 text-sm leading-5">
			<label for="comments" class="text-base leading-6">I would like to hear from Percipio about their exciting projects</label>
		</div>
	</div>
</form>
