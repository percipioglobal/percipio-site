{%- import '_macros/atoms' as render -%}

{# props #}
{%- set item = {
    overline: item.overline ??? '',
    heading: item.heading ??? '',
    body: item.body ??? '',
    image: item.image ??? ''
} -%}
{%- set settings = {
    position: settings.position ??? 'right',
    background: settings.background ??? 'blue-800'
} -%}
{%- set utilities = utilities|default('') -%}

{%- minify -%}
    <article class="md:flex {{ settings.position == 'right' ? 'md:flex-row-reverse' : '' }} {{ utilities }}">

        <div class="w-full mb-4 md:mb-0 md:w-1/3 flex-shrink-0 flex-grow-0 bg-red-500">
            image
        </div>

        <div class="col-span-2 {{ settings.position == 'left' ? 'md:pl-10 lg:pl-32' : 'md:pr-10 lg:pr-32' -}}">
            {%- if item.overline -%}
                {{- render.atom('text', 'overline', {
                    content: item.overline
                }) -}}
            {%- endif -%}

            <h2 class="mt-3.5 mb-6">
                {{- render.atom('text', 'h2', {
                        content: item.heading
                }) -}}
            </h2>

            {%- include '_molecules/content/content--prose' ignore missing with {
                content: item.body,
            } -%}
        </div>
    </article>
{%- endminify -%}
