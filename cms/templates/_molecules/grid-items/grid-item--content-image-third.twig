{%- import '_macros/atoms' as render -%}

{# props #}
{%- set item = {
    overline: item.overline ??? '',
    heading: item.heading ??? '',
    body: item.body ??? '',
    image: item.image ??? ''
} -%}
{%- set settings = {
    position: settings.position ??? 'right',
    background: settings.background ??? 'blue-800'
} -%}
{%- set utilities = utilities|default('') -%}

{%- minify -%}
    <article class="sm:flex {{ settings.position == 'right' ? 'sm:flex-row-reverse' : '' }} {{ utilities }}">

        <div class="w-full mb-4 sm:mb-0 sm:w-1/3 flex-shrink-0 flex-grow-0">
            <div class="animate" data-animation="fadeIn">
                {{- render.atom('image', 'grid-third', {
                        image: item.image.collect().first(),
                        sizes: ['(max-width:768px) 100vw', '(min-width:768px) 33.3vw'],
                        alt: content.title,
                        placeholders: placeholders
                    })
                -}}
            </div>
        </div>

        <div class="{{- settings.position == 'left' ? 'sm:pl-10 lg:pl-32' : 'sm:pr-10 lg:pr-32' -}}">
            <div class="animate" data-animation="{{- settings.position == 'left' ? 'slideInRightToLeft' : 'slideLeftToRight' -}}">
                {%- if item.overline -%}
                    {{- render.atom('text', 'overline', {
                        content: item.overline
                    }) -}}
                {%- endif -%}

                <h2 class="mt-3.5 mb-6">
                    {{- render.atom('text', 'h2', {
                            content: item.heading
                    }) -}}
                </h2>

                {%- include '_molecules/content/content--prose' ignore missing with {
                    content: item.body,
                } -%}
            </div>
        </div>
    </article>
{%- endminify -%}
