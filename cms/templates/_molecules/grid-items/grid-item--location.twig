{% import '_macros/atoms' as render %}

{%- set props = props|merge({
    city: item.city ??? null,
    country: item.country ??? null,
}) -%}

<div class="flex flex-col items-center w-full animate" data-animation="fadeIn">
    {{- render.atom('text', 'h3', {
        alignment: 'text-center',
        content: props.city,
        color: 'white',
    }) -}}
    {{- render.atom('text', 'location', {
        alignment: 'text-center',
        content: props.country,
        color: 'text-white',
        utilities: 'mt-2',
    }) -}}
</div>
