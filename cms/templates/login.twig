{%- extends "_boilerplate/_layouts/generic-page-layout.twig" -%}
{% import '_macros/atoms' as render %}

{%- block content -%}

<div class="mt-60 mb-60 p-12 w-full max-w-md m-auto bg-blue-600 p-5 text-white-100">

    <form method="post" accept-charset="UTF-8">
        {{- csrfInput() -}}
        {{- actionInput('users/login') -}}

        {{- render.atom('input', 'text', {
            placeholder: 'Enter your email',
            id: 'login',
            name: 'loginName',
            label: 'Enter your email',
            required: 'true',
        }) -}}

        {{- render.atom('input', 'password', {
            placeholder: 'Password',
            id: 'password',
            name: 'password',
            label: 'Enter your password',
            required: 'true',
        }) -}}

        {{- render.atom('input', 'checkbox', {
        name: 'rememberMe',
        label: 'Remember me',
        }) -}}
        
        <button type="submit" class="mb-6">
            {{- render.atom('button', 'primary', {
                text: 'Login',
            }) -}}
        </button>

        {%- if errorMessage is defined -%}

            <p class="mb-6 font-bold">{{- errorMessage -}}</p>

        {%- endif -%}

    </form>

    <p>
        <a href="{{- url('reset-password') -}}" class="underline">Forgot your password?</a>
    </p>

</div>

{%- endblock -%}