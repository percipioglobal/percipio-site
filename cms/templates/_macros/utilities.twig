{# Margin Position #}
{% macro position(content) %}
    {% spaceless %}
        {%- switch content.position -%}

            {%- case "center" -%}
                mx-auto

            {%- case "left" -%}
                mr-auto

            {%- case "right" -%}
                ml-auto

        {%- endswitch -%}
    {% endspaceless %}
{% endmacro %}
