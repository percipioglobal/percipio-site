{%- extends "_boilerplate/_layouts/generic-page-layout.twig" -%}
{% import '_macros/atoms' as render %}

{%- block content -%}

<div class="mt-60 mb-60 p-12 w-full max-w-md m-auto bg-blue-600 p-5 text-white-100">
    <form method="post" accept-charset="UTF-8">
    {{- csrfInput() -}}
    {{- actionInput('users/send-password-reset-email') -}}
    {{- redirectInput('') -}}

    <label for="loginName" class="block mb-2">Username or email</label>
    {{- input('text', 'loginName', loginName ?? craft.app.user.rememberedUsername, {
        id: 'loginName',
        class: 'w-full p-4 mb-6 text-black-100 outline-none focus:bg-gray-300',
    }) -}}

    {%- if errors ?? false -%}

        {{- ul(errors, {class: 'errors'}) -}}

    {%- endif -%}

    <button type="submit" class="mb-6">
            {{- render.atom('button', 'primary', {
                text: 'Submit',
            }) -}}
        </button>
    
    </form>
</div>

{%- endblock -%}