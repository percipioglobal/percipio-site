{
    "name": "percipioglobal/percipio-site",
    "description": "Percipio.London brand website",
    "version": "1.0.0",
    "keywords": [
        "Percipio"
    ],
    "license": "MIT",
    "homepage": "https://sandbox.percipio.london/",
    "type": "project",
    "support": {
        "email": "support@percipio.london",
        "issues": "https://github.com/percipioglobal/percipio-site/issues",
        "source": "https://github.com/percipioglobal/percipio-site",
        "docs": "https://github.com/percipioglobal/percipio-site"
    },
    "minimum-stability": "stable",
    "require": {
        "angellco/spoon": "^3.3.3",
        "craftcms/aws-s3": "^1.2",
        "craftcms/cms": "^3.6.16",
        "craftcms/mailgun": "^2.0.0",
        "craftcms/redactor": "^2.1.0",
        "hybridinteractive/craft-position-fieldtype": "^1.0.0",
        "hybridinteractive/craft-width-fieldtype": "^1.0.3",
        "nystudio107/craft-eagerbeaver": "^1.0.0",
        "nystudio107/craft-fastcgicachebust": "^1.0.0",
        "nystudio107/craft-imageoptimize": "^1.0.0",
        "nystudio107/craft-minify": "^1.2.5",
        "nystudio107/craft-seomatic": "^3.2.0",
        "nystudio107/craft-twigpack": "^1.2.0",
        "nystudio107/craft-typogrify": "^1.1.4",
        "percipioglobal/craft-colour-swatches": "^1.4",
        "putyourlightson/craft-blitz-recommendations": "^1.1",
        "sebastianlenz/linkfield": "^2.0@beta",
        "spicyweb/craft-embedded-assets": "^2.4",
        "verbb/super-table": "^2.1.0",
        "vlucas/phpdotenv": "^3.4.0",
        "yiisoft/yii2": "^2.0.0",
        "yiisoft/yii2-redis": "^2.0.6"
    },
    "autoload": {
        "psr-4": {
            "modules\\sitemodule\\": "modules/sitemodule/src/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "7.3"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    },
    "scripts": {
        "craft-update": [
            "@pre-craft-update",
            "@post-craft-update"
        ],
        "pre-craft-update": [
        ],
        "post-craft-update": [
            "@php craft install/check --interactive=0 && php craft clear-caches/all --interactive=0 || exit 0",
            "@php craft install/check --interactive=0 && php craft migrate/all --interactive=0 || exit 0",
            "@php craft install/check --interactive=0 && php craft project-config/apply --interactive=0 || exit 0"
        ],
        "post-root-package-install": [
            " @php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php craft setup/welcome"
        ],
        "pre-update-cmd": "@pre-craft-update",
        "pre-install-cmd": "@pre-craft-update",
        "post-update-cmd": "@post-craft-update",
        "post-install-cmd": "@post-craft-update"
    }
}
